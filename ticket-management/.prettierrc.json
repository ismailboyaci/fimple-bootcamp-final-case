{
    "semi": true, 
    "singleQuote": true, 
    "jsxSingleQuote": true, 
    "trailingComma": "all", 
    "printWidth": 150, 
    "tabWidth": 2, 
    "useTabs": false, 
    "endOfLine": "crlf",
    "arrowParens": "always", 
    "proseWrap": "preserve", 
    "htmlWhitespaceSensitivity": "css",
    "bracketSpacing": true,
    "importStatementAlignment": "left",
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "singleQuote": false,
          "semi": true,
          "useTabs": false,
          "tabWidth": 2,
          "printWidth": 80,
          "scss": {
            "separators": {
              "betweenRules": 1
            }
          }
        }
      }
    ]
  }
  